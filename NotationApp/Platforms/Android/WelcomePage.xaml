<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="NotationApp.Platforms.Android.WelcomePage"
             Shell.NavBarIsVisible="false"
             Title="WelcomePage">
    
    <Grid RowDefinitions="*,Auto">
        <CarouselView x:Name="welcomeCarousel" 
                      Grid.Row="0"
                      Loop="False"
                      IndicatorView="indicatorView">
            <CarouselView.ItemsSource>
                <x:Array Type="{x:Type x:String}">
                    <x:String>1</x:String>
                    <x:String>2</x:String>
                    <x:String>3</x:String>
                    <x:String>4</x:String>
                </x:Array>
            </CarouselView.ItemsSource>
            <CarouselView.ItemTemplate>
                <DataTemplate>
                    <Grid RowDefinitions="Auto,*,Auto,Auto" 
                          Padding="20"
                          RowSpacing="20">
                        <!--Progress Text-->
                        <Label Grid.Row="0"
                               Text="{Binding ., StringFormat='{}Page {0} of 4'}"
                               HorizontalOptions="Center"
                               Margin="0,10"/>

                        <!--Icon and Description-->
                        <VerticalStackLayout Grid.Row="1" 
                                           Spacing="20"
                                           VerticalOptions="Center">
                            <Image HeightRequest="350"
                                   WidthRequest="350"
                                   HorizontalOptions="Center">
                                <Image.Triggers>
                                    <DataTrigger TargetType="Image" 
                                               Binding="{Binding .}" 
                                               Value="1">
                                        <Setter Property="Source" 
                                                Value="notes_rafiki.png"/>
                                    </DataTrigger>
                                    <DataTrigger TargetType="Image" 
                                               Binding="{Binding .}" 
                                               Value="2">
                                        <Setter Property="Source" 
                                                Value="notes_pana.png"/>
                                    </DataTrigger>
                                    <DataTrigger TargetType="Image" 
                                               Binding="{Binding .}" 
                                               Value="3">
                                        <Setter Property="Source" 
                                                Value="notes_amico.png"/>
                                    </DataTrigger>
                                    <DataTrigger TargetType="Image" 
                                               Binding="{Binding .}" 
                                               Value="4">
                                        <Setter Property="Source" 
                                                Value="notes_bro.png"/>
                                    </DataTrigger>
                                </Image.Triggers>
                            </Image>

                            <Label HorizontalOptions="Center"
                                HorizontalTextAlignment="Center"
                                FontSize="18"
                                FontFamily="OpenSansRegular"
                                LineHeight="1.5"
                                Margin="20,0">
                                <Label.Triggers>
                                    <DataTrigger TargetType="Label" 
                                       Binding="{Binding .}" 
                                       Value="1">       
                                        <Setter Property="Text" 
                                            Value="Dễ dàng ghi lại ý tưởng, công việc và danh sách cần làm để không bỏ lỡ điều quan trọng."/>
                                    </DataTrigger>
                                    <DataTrigger TargetType="Label" 
                                       Binding="{Binding .}" 
                                       Value="2">
                                        <Setter Property="Text" 
                                            Value="Biến ghi chú thành công cụ mạnh mẽ bằng cách thêm hình ảnh, ghi âm hoặc các thông tin cần thiết khác."/>
                                    </DataTrigger>
                                    <DataTrigger TargetType="Label" 
                                        Binding="{Binding .}" 
                                        Value="3">
                                        <Setter Property="Text" 
                                            Value="Ghi lại và tổ chức bài viết, ý tưởng hoặc tài liệu quan trọng, giúp bạn dễ dàng truy cập khi cần."/>
                                    </DataTrigger>
                                    <DataTrigger TargetType="Label" 
                                        Binding="{Binding .}" 
                                        Value="4">
                                        <Setter Property="Text" 
                                            Value="Đồng bộ ghi chú trên mọi thiết bị, giúp bạn truy cập dễ dàng mọi lúc, mọi nơi."/>
                                    </DataTrigger>

                                </Label.Triggers>
                            </Label>
                        </VerticalStackLayout>

                        <!-- Button Container -->
                        <VerticalStackLayout Grid.Row="2" Spacing="10">
                            <!-- Next/Get Started Button -->
                            <Button Margin="20,0"
                                    BackgroundColor="#6633FF"
                                    TextColor="White"
                                    CornerRadius="5"
                                    HeightRequest="50">
                                <Button.Triggers>
                                    <DataTrigger TargetType="Button" 
                                               Binding="{Binding .}" 
                                               Value="4">
                                        <Setter Property="Text" 
                                                Value="Get Started"/>
                                        <Setter Property="Command"
                                                Value="{Binding Source={RelativeSource AncestorType={x:Type ContentPage}}, Path=GetStartedCommand}"/>
                                    </DataTrigger>
                                    <DataTrigger TargetType="Button" 
                                               Binding="{Binding .}" 
                                               Value="1">
                                        <Setter Property="Text" 
                                                Value="Next"/>
                                        <Setter Property="Command"
                                                Value="{Binding Source={RelativeSource AncestorType={x:Type ContentPage}}, Path=NextCommand}"/>
                                    </DataTrigger>
                                    <DataTrigger TargetType="Button" 
                                               Binding="{Binding .}" 
                                               Value="2">
                                        <Setter Property="Text" 
                                                Value="Next"/>
                                        <Setter Property="Command"
                                                Value="{Binding Source={RelativeSource AncestorType={x:Type ContentPage}}, Path=NextCommand}"/>
                                    </DataTrigger>
                                    <DataTrigger TargetType="Button" 
                                               Binding="{Binding .}" 
                                               Value="3">
                                        <Setter Property="Text" 
                                                Value="Next"/>
                                        <Setter Property="Command"
                                                Value="{Binding Source={RelativeSource AncestorType={x:Type ContentPage}}, Path=NextCommand}"/>
                                    </DataTrigger>
                                </Button.Triggers>
                            </Button>

                            <!-- Skip Button -->
                            <Button Text="Skip" 
                                   TextColor="#6633FF"
                                   BackgroundColor="Transparent"
                                   Command="{Binding Source={RelativeSource AncestorType={x:Type ContentPage}}, Path=SkipCommand}"/>
                        </VerticalStackLayout>
                    </Grid>
                </DataTemplate>
            </CarouselView.ItemTemplate>
        </CarouselView>

        <!-- Indicator -->
        <IndicatorView x:Name="indicatorView"
                      Grid.Row="1"
                      Margin="0,0,0,20"
                      IndicatorColor="Gray"
                      SelectedIndicatorColor="#6633FF"
                      HorizontalOptions="Center"/>
    </Grid>
</ContentPage>