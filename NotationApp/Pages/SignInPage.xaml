<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="NotationApp.Pages.SignInPage"
             Shell.NavBarIsVisible="False">

    <ScrollView>
        <VerticalStackLayout Spacing="24" Padding="24,0" VerticalOptions="Center">

            <VerticalStackLayout Spacing="8">
                <Label 
                    Text="Login here"
                    TextColor="#1a41cc"
                    FontSize="30"
                    FontAttributes="Bold"
                    HorizontalOptions="Start" />

                <Label 
                    Text="Welcome back you've been missed!"
                    TextColor="Black"
                    FontSize="20"
                    HorizontalOptions="Start" />
            </VerticalStackLayout>

            <VerticalStackLayout Spacing="16">
                <Label Text="{Binding EmailError}"
                       TextColor="Red"
                       IsVisible="{Binding EmailError, Converter={StaticResource StringToBoolConverter}}" />
                <Frame 
                    BorderColor="#e8e8e8"
                    BackgroundColor="#f7f7f7"
                    CornerRadius="8"
                    HasShadow="False"
                    Padding="16,2">
                    <Entry 
                        Placeholder="Email"
                        Text="{Binding Email}"
                        BackgroundColor="Transparent"
                        TextColor="Black" 
                        Visual="Default"/>
                </Frame>
                <Label Text="{Binding PasswordError}"
                       TextColor="Red"
                       IsVisible="{Binding PasswordError, Converter={StaticResource StringToBoolConverter}}" />
                <Frame 
                    BorderColor="#e8e8e8"
                    BackgroundColor="#f7f7f7"
                    CornerRadius="8"
                    HasShadow="False"
                    Padding="16,2">
                    <Entry 
                        Placeholder="Password"
                        Text="{Binding Password}"
                        IsPassword="True"
                        BackgroundColor="Transparent"
                        TextColor="Black" 
                        Visual="Default"/>
                </Frame>

                <Label 
                    Text="Forgot your password?"
                    TextColor="#1a41cc"
                    FontSize="14"
                    HorizontalOptions="End" />

                <ActivityIndicator 
                    IsRunning="{Binding IsLoading}"
                    IsVisible="{Binding IsLoading}"
                    HorizontalOptions="Center"
                    VerticalOptions="Center"
                    Color="#1a41cc" />

                <Button 
                    Text="Sign in"
                    Command="{Binding SignInCommand}"
                    BackgroundColor="#1a41cc"
                    TextColor="White"
                    CornerRadius="8"
                    HeightRequest="50"
                    FontAttributes="Bold" 
                    IsEnabled="{Binding IsLoading, Converter={StaticResource InverseBoolConverter}}"/>

                <Label 
                    Text="Create new account"
                    TextColor="Black"
                    FontSize="14"
                    HorizontalOptions="Center">
                    <Label.GestureRecognizers>
                        <TapGestureRecognizer Command="{Binding NavigateToRegisterCommand}" />
                    </Label.GestureRecognizers>
                </Label>

                <Label 
                    Text="Or continue with"
                    TextColor="#666666"
                    FontSize="14"
                    HorizontalOptions="Center" />

                <HorizontalStackLayout 
                    Spacing="16" 
                    HorizontalOptions="Center">
                    <Frame 
                        BorderColor="#e8e8e8"
                        BackgroundColor="White"
                        CornerRadius="24"
                        HeightRequest="48"
                        WidthRequest="48"
                        Padding="0"
                        HasShadow="False">
                        <Image 
                            Source="google_logo.png"
                            HeightRequest="24"
                            WidthRequest="24"
                            HorizontalOptions="Center"
                            VerticalOptions="Center" />
                    </Frame>

                    <Frame 
                        BorderColor="#e8e8e8"
                        BackgroundColor="White"
                        CornerRadius="24"
                        HeightRequest="48"
                        WidthRequest="48"
                        Padding="0"
                        HasShadow="False">
                        <Image 
                            Source="apple_logo.png"
                            HeightRequest="24"
                            WidthRequest="24"
                            HorizontalOptions="Center"
                            VerticalOptions="Center" />
                    </Frame>
                </HorizontalStackLayout>
            </VerticalStackLayout>

            <Label 
                Text="{Binding StatusMessage}"
                TextColor="Red"
                HorizontalOptions="Center"
                IsVisible="{Binding StatusMessage, Converter={StaticResource StringToBoolConverter}}" />

        </VerticalStackLayout>
    </ScrollView>
</ContentPage>